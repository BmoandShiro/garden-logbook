generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  MODERATOR
}

enum Permission {
  CREATE_PLANT
  EDIT_PLANT
  DELETE_PLANT
  CREATE_LOG
  EDIT_LOG
  DELETE_LOG
  MANAGE_USERS
  MANAGE_ROLES
  MANAGE_STRAINS
}

enum ResourcePermission {
  VIEW        // Can view the resource
  EDIT        // Can edit resource details
  DELETE      // Can delete the resource
  MANAGE      // Can manage resource settings
  INVITE      // Can invite others
  MANAGE_PERMS // Can manage others' permissions
}

enum ScheduleFrequency {
  HOURLY
  DAILY
  WEEKLY
  BIWEEKLY    // Every two weeks
  MONTHLY
  QUARTERLY   // Every three months
  BIANNUAL    // Every six months
  YEARLY
  CUSTOM      // For custom intervals
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String      @unique
  emailVerified DateTime?
  image         String?
  password      String?     // Optional to allow OAuth users without passwords
  role          Role        @default(USER)
  permissions   Permission[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  plants        Plant[]
  logs          Log[]
  strains       Strain[]
  accounts      Account[]
  sessions      Session[]
  logTemplates  LogTemplate[]
  logEntries    LogEntry[]
  ownedGardens  Garden[]    @relation("GardenCreator")
  gardenMemberships GardenMember[]
  addedMembers  GardenMember[] @relation("MemberAdder")
  roomTemplates RoomTemplate[]
  createdRooms  Room[]      @relation("RoomCreator")
  createdZones  Zone[]
  createdEquipment Equipment[]
  createdSOPs   CleaningSOP[]
  createdTasks  MaintenanceTask[]
  createdPlants ZonePlant[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Plant {
  id          String   @id @default(cuid())
  name        String
  strainId    String?
  strain      Strain?  @relation(fields: [strainId], references: [id])
  stage       Stage    @default(VEGETATIVE)
  location    String?
  startDate   DateTime @default(now())
  harvestDate DateTime?
  notes       String?  @db.Text
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs        Log[]
  tags        Tag[]    @relation("PlantToTag")
  room        Room?    @relation(fields: [roomId], references: [id])
  roomId      String?
  logEntries  LogEntry[]
  gardenId    String?
  garden      Garden?  @relation(fields: [gardenId], references: [id], onDelete: Cascade)
}

model Strain {
  id            String   @id @default(cuid())
  name          String
  type          String?  // indica, sativa, hybrid
  floweringTime Int?     // in weeks
  description   String?  @db.Text
  imageUrl      String?
  thcContent    Float?
  cbdContent    Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plants        Plant[]
}

model Log {
  id          String    @id @default(cuid())
  date        DateTime  @default(now())
  type        LogType
  stage       Stage
  // Environmental measurements
  temperature Float?    // in Celsius
  humidity    Float?    // percentage
  pH          Float?
  ec          Float?    // electrical conductivity
  par         Float?    // Photosynthetically Active Radiation
  co2         Float?    // CO2 levels in PPM
  vpd         Float?    // Vapor Pressure Deficit
  
  // Water and nutrients
  waterAmount Float?    // in milliliters
  runoff      Float?    // runoff pH/EC measurements
  nutrients   String[]  // array of nutrient names
  nutrientPpm Float?    // Total PPM of nutrient solution
  
  // Growth measurements
  height      Float?    // plant height in cm
  width       Float?    // plant width/spread in cm
  nodeCount   Int?      // number of nodes
  
  // Health indicators
  healthRating Int?     // 1-5 scale
  symptoms    String[]  // array of observed symptoms
  pestFound   String[]  // array of pests found
  
  // Actions taken
  actions     String[]  // array of actions taken
  materials   String[]  // materials used (nutrients, pesticides, etc)
  
  // General
  notes       String?   @db.Text
  imageUrls   String[]  // array of image URLs
  plantId     String
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  plant       Plant     @relation(fields: [plantId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  data        Json?     // Flexible field for additional measurements
  
  // Location context
  gardenId    String?
  garden      Garden?   @relation(fields: [gardenId], references: [id])
  roomId      String?
  room        Room?     @relation(fields: [roomId], references: [id])
  zoneId      String?
  zone        Zone?     @relation(fields: [zoneId], references: [id])
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String?
  createdAt DateTime @default(now())
  plants    Plant[]  @relation("PlantToTag")
}

enum LogType {
  WATERING          // Basic watering log
  FEEDING           // Nutrient feeding
  ENVIRONMENTAL     // Environmental conditions
  PRUNING           // Plant maintenance
  TRAINING          // Plant training techniques
  DEFOLIATION       // Leaf removal
  FLUSHING          // Pre-harvest flushing
  HARVEST           // Harvest records
  PEST_DISEASE      // Pest or disease issues
  TRANSPLANT        // Moving to new container/location
  GERMINATION       // Seed starting
  CLONING           // Cloning activities
  INSPECTION        // Regular plant checkups
  TREATMENT         // Pest/disease treatments
  STRESS           // Stress symptoms
  GENERAL          // General observations
}

enum Stage {
  SEEDLING
  VEGETATIVE
  FLOWERING
  HARVEST
  DRYING
  CURING
}

enum FieldType {
  TEXT        // Free text input
  NUMBER      // Numeric input with optional units
  BOOLEAN     // Yes/No checkbox
  SELECT      // Dropdown selection
  MULTI_SELECT // Multiple choice selection
  DATE        // Date picker
  TIME        // Time picker
  DATETIME    // Date and time picker
  RATING      // 1-5 or 1-10 rating
  MEASUREMENT // Numeric with units (e.g., pH, EC, PPM)
  TEMPERATURE // Temperature with unit conversion
  HUMIDITY    // Humidity percentage
  COUNTER     // Incrementing/decrementing counter
  TIMER       // Duration/timer
  MEDIA       // Image/video upload
  LOCATION    // Location selection (Garden/Room/Zone)
}

model LogTemplate {
  id          String      @id @default(cuid())
  name        String
  description String?
  type        LogType     // The primary type of log this template is for
  icon        String?     // Icon identifier for the template
  color       String?     // Color theme for the template
  
  // Template configuration
  fields      Json        // Array of field definitions with validation rules
  layout      Json?       // UI layout configuration
  defaultValues Json?     // Default values for fields
  required    String[]    // Array of required field IDs
  
  // Scheduling
  scheduleConfig Json?    // { frequency: ScheduleFrequency, interval: number, times: string[], daysOfWeek: number[] }
  reminders   Boolean     @default(false)
  reminderBefore Int?     // Minutes before scheduled time to send reminder
  
  // Template metadata
  isActive    Boolean     @default(true)
  isPublic    Boolean     @default(false)
  version     Int         @default(1)
  
  // Relations
  createdBy   User        @relation(fields: [userId], references: [id])
  userId      String
  garden      Garden?     @relation(fields: [gardenId], references: [id])
  gardenId    String?
  room        Room?       @relation(fields: [roomId], references: [id])
  roomId      String?
  entries     LogEntry[]
  
  // Timestamps
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model LogEntry {
  id            String      @id @default(cuid())
  template      LogTemplate @relation(fields: [templateId], references: [id])
  templateId    String
  
  // Core data
  data          Json        // The actual log data matching template fields
  date          DateTime    // When the logged activity occurred
  duration      Int?        // Duration in minutes (if applicable)
  status        String      @default("completed") // drafted, completed, flagged, etc.
  
  // Relations
  createdBy     User        @relation(fields: [userId], references: [id])
  userId        String
  plants        Plant[]     // Plants involved in this log entry
  garden        Garden?     @relation(fields: [gardenId], references: [id])
  gardenId      String?
  room          Room?       @relation(fields: [roomId], references: [id])
  roomId        String?
  zone          Zone?       @relation(fields: [zoneId], references: [id])
  zoneId        String?
  
  // Additional context
  notes         String?     // Additional notes
  tags          String[]    // Custom tags
  imageUrls     String[]    // Associated images
  weather       Json?       // Weather conditions (if outdoor)
  
  // Timestamps
  scheduledFor  DateTime?   // When this log was scheduled for
  completedAt   DateTime?   // When the log was marked as completed
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Room {
  id              String   @id @default(cuid())
  name            String
  description     String?
  type            String?
  dimensions      String?
  blueprintUrl    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  gardenId        String
  garden          Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)
  createdBy       User     @relation("RoomCreator", fields: [creatorId], references: [id])
  creatorId       String
  equipment       Equipment[]
  cleaningSOPs    CleaningSOP[]
  maintenanceTasks MaintenanceTask[]
  plants          Plant[]
  logTemplates    LogTemplate[]
  logEntries      LogEntry[]
  logs            Log[]
  zones           Zone[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Garden {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  isPrivate   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creatorId   String
  createdBy   User     @relation("GardenCreator", fields: [creatorId], references: [id])
  members     GardenMember[]
  rooms       Room[]
  plants      Plant[]
  logTemplates LogTemplate[]
  logEntries  LogEntry[]
  logs        Log[]
}

model GardenMember {
  id          String   @id @default(cuid())
  garden      Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)
  gardenId    String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  addedBy     User     @relation("MemberAdder", fields: [addedById], references: [id])
  addedById   String
  permissions ResourcePermission[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([gardenId, userId])
}

model Equipment {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
}

model CleaningSOP {
  id          String   @id @default(cuid())
  title       String
  description String?
  frequency   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
}

model MaintenanceTask {
  id          String   @id @default(cuid())
  title       String
  description String?
  frequency   String
  nextDueDate DateTime
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
}

model RoomTemplate {
  id                String   @id @default(cuid())
  name              String
  description       String?
  type              String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  defaultEquipment  Json
  defaultSOPs       Json
  defaultMaintenance Json
}

model Zone {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String?
  dimensions  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  creatorId   String
  createdBy   User     @relation(fields: [creatorId], references: [id])
  plants      ZonePlant[]
  logs        Log[]
  logEntries  LogEntry[]
}

model ZonePlant {
  id                  String    @id @default(cuid())
  name                String
  species             String
  variety             String?
  plantedDate         DateTime?
  expectedHarvestDate DateTime?
  notes               String?   @db.Text
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  zoneId              String
  zone                Zone      @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  creatorId           String
  createdBy           User      @relation(fields: [creatorId], references: [id])
}
