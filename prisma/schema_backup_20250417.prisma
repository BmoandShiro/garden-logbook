generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  MODERATOR
}

enum Permission {
  CREATE_PLANT
  EDIT_PLANT
  DELETE_PLANT
  CREATE_LOG
  EDIT_LOG
  DELETE_LOG
  MANAGE_USERS
  MANAGE_ROLES
  MANAGE_STRAINS
}

enum ResourcePermission {
  VIEW        // Can view the resource
  EDIT        // Can edit resource details
  DELETE      // Can delete the resource
  MANAGE      // Can manage resource settings
  INVITE      // Can invite others
  MANAGE_PERMS // Can manage others' permissions
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String      @unique
  emailVerified DateTime?
  image         String?
  password      String?     // Optional to allow OAuth users without passwords
  role          Role        @default(USER)
  permissions   Permission[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  plants        Plant[]
  logs          Log[]
  strains       Strain[]
  accounts      Account[]
  sessions      Session[]
  logTemplates  LogTemplate[]
  logEntries    LogEntry[]
  ownedGardens  Garden[]    @relation("GardenCreator")
  gardenMemberships GardenMember[]
  addedMembers  GardenMember[] @relation("MemberAdder")
  roomTemplates RoomTemplate[]
  createdRooms  Room[]      @relation("RoomCreator")
  createdZones  Zone[]
  createdEquipment Equipment[]
  createdSOPs   CleaningSOP[]
  createdTasks  MaintenanceTask[]
  createdPlants ZonePlant[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Plant {
  id          String   @id @default(cuid())
  name        String
  strainId    String?
  strain      Strain?  @relation(fields: [strainId], references: [id])
  stage       Stage    @default(VEGETATIVE)
  location    String?
  startDate   DateTime @default(now())
  harvestDate DateTime?
  notes       String?  @db.Text
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs        Log[]
  tags        Tag[]    @relation("PlantToTag")
  room        Room?    @relation(fields: [roomId], references: [id])
  roomId      String?
  logEntries  LogEntry[]
  gardenId    String?
  garden      Garden?  @relation(fields: [gardenId], references: [id], onDelete: Cascade)
}

model Strain {
  id            String   @id @default(cuid())
  name          String
  type          String?  // indica, sativa, hybrid
  floweringTime Int?     // in weeks
  description   String?  @db.Text
  imageUrl      String?
  thcContent    Float?
  cbdContent    Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plants        Plant[]
}

model Log {
  id          String    @id @default(cuid())
  date        DateTime  @default(now())
  type        LogType
  stage       Stage
  temperature Float?    // in Celsius
  humidity    Float?    // percentage
  pH          Float?
  ec          Float?    // electrical conductivity
  par         Float?    // Photosynthetically Active Radiation
  waterAmount Float?    // in milliliters
  nutrients   String[]  // array of nutrient names
  notes       String?   @db.Text
  imageUrl    String?
  plantId     String
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  plant       Plant     @relation(fields: [plantId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  data        Json?     // Flexible field for additional measurements
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String?
  createdAt DateTime @default(now())
  plants    Plant[]  @relation("PlantToTag")
}

enum LogType {
  WATERING
  FEEDING
  ENVIRONMENTAL
  PRUNING
  TRAINING
  DEFOLIATION
  FLUSHING
  HARVEST
  PEST_DISEASE
  GENERAL
}

enum Stage {
  SEEDLING
  VEGETATIVE
  FLOWERING
  HARVEST
  DRYING
  CURING
}

model LogTemplate {
  id          String      @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  createdBy   User        @relation(fields: [userId], references: [id])
  userId      String
  room        Room?       @relation(fields: [roomId], references: [id])
  roomId      String?
  fields      Json        // Stores the template fields configuration
  isActive    Boolean     @default(true)
  entries     LogEntry[]
}

model LogEntry {
  id            String      @id @default(cuid())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  date          DateTime    
  template      LogTemplate @relation(fields: [templateId], references: [id])
  templateId    String
  createdBy     User        @relation(fields: [userId], references: [id])
  userId        String
  room          Room        @relation(fields: [roomId], references: [id])
  roomId        String
  data          Json        // Stores the actual log data
  notes         String?     
  plants        Plant[]     // Plants involved in this log entry
}

model Room {
  id              String   @id @default(cuid())
  name            String
  description     String?
  type            String?
  dimensions      String?
  blueprintUrl    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  gardenId        String
  garden          Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)
  createdBy       User     @relation("RoomCreator", fields: [creatorId], references: [id])
  creatorId       String
  equipment       Equipment[]
  cleaningSOPs    CleaningSOP[]
  maintenanceTasks MaintenanceTask[]
  plants          Plant[]
  logTemplates    LogTemplate[]
  logEntries      LogEntry[]
  zones           Zone[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Garden {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  isPrivate   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creatorId   String
  createdBy   User     @relation("GardenCreator", fields: [creatorId], references: [id])
  members     GardenMember[]
  rooms       Room[]
  plants      Plant[]
}

model GardenMember {
  id          String   @id @default(cuid())
  garden      Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)
  gardenId    String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  addedBy     User     @relation("MemberAdder", fields: [addedById], references: [id])
  addedById   String
  permissions ResourcePermission[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([gardenId, userId])
}

model Equipment {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
}

model CleaningSOP {
  id          String   @id @default(cuid())
  title       String
  description String?
  frequency   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
}

model MaintenanceTask {
  id          String   @id @default(cuid())
  title       String
  description String?
  frequency   String
  nextDueDate DateTime
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [creatorId], references: [id])
  creatorId   String
}

model RoomTemplate {
  id                String   @id @default(cuid())
  name              String
  description       String?
  type              String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  defaultEquipment  Json
  defaultSOPs       Json
  defaultMaintenance Json
}

model Zone {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String?
  dimensions  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  creatorId   String
  createdBy   User     @relation(fields: [creatorId], references: [id])
  plants      ZonePlant[]
}

model ZonePlant {
  id                  String    @id @default(cuid())
  name                String
  species             String
  variety             String?
  plantedDate         DateTime?
  expectedHarvestDate DateTime?
  notes               String?   @db.Text
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  zoneId              String
  zone                Zone      @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  creatorId           String
  createdBy           User      @relation(fields: [creatorId], references: [id])
}
